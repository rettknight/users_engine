<h1>Editar usuario</h1>
<%= simple_form_for(@user) do |f| %>
	<%= render 'users/shared/error_messages', :object => f.object %>
	<%= render 'fields', :f => f %> 
	<div class ="actions">
		<%= f.submit "Actualizar", class: "btn btn-primary" %>
		<%= button_tag "Desactivar Cuenta", class: "btn btn-primary" %> 
	</div>
<% end %>