<p id="notice"><%= notice %></p>

<h1>Listado de Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Estado</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.name} #{user.lastname}", user %></td>
        <td><%= user.active == 1 ? 'Cuenta activada' : 'Cuenta desactivada' %> </td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td></td>
        <td><% if current_user.admin? %> <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %> <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_user_path %>
